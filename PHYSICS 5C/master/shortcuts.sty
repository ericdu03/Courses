    %%ENVIRONMENT STYLING%%
    % Theorem Styling
    \newtcbtheorem[number within=chapter]{theorem}{Theorem}
        {
            breakable,                                % Make box breakable
            bottomrule at break=0mm,                  % No border at bottom break
            toprule at break=0mm,                     % No border at top break
            colback=thmblue!10,                       % Background color
            colframe=thmblue!40,                      % Frame color
            fonttitle={\color{thmblue!130}\bfseries}, % Title color
            arc=0.5mm                                 % Rounded corners
        }
        {th}                                          % For referencing
    %%%%
    % Definition Styling
    \newtcbtheorem[number within=chapter]{definition}{Definition}
        {
            breakable,                                      % Make box breakable
            bottomrule at break=0mm,                        % No border at bottom break
            toprule at break=0mm,                           % No border at top break
            theorem style = plain,                          % Removes top frame
            colback=green!10,                               % Background color
            colframe=defgreen-frame,                        % Frame color
            leftrule=2mm,                                   % Vertical left bar
            left=3mm,                                       % Custom left indent
            fonttitle={\color{defgreen-title!80}\bfseries}, % Title color
            arc = 0mm                                       % Rounded corners
        }
        {def}                                               % For referencing
    %%%%
    % Example Styling
    \newtcbtheorem[number within=chapter]{example}{Example}
        {
            breakable,                                       % Make box breakable
            bottomrule at break=0mm,                         % No border at bottom break
            toprule at break=0mm,                            % No border at top break
            colback = exgrey-back!15,                        % Background color
            colframe = exgrey-frame!70,                      % Frame color
            fonttitle = {\color{exgrey-title!130}\bfseries}, % Title color
            arc = 0.5mm                                      % Rounded corners
        }
        {ex}                                                 % For referencing
    %%%%
    % Insight Styling
    \newtcbtheorem[no counter]{insight}{Insight}
        {
            breakable,                                   % Make box breakable
            bottomrule at break=0mm,                     % No border at bottom break
            toprule at break=0mm,                        % No border at top break
            theorem style = plain,                       % Removes top frame
            colback=inyellow-back!10,                    % Background color
            colframe=inyellow-frame,                     % Frame color
            leftrule=2mm,                                % Vertical left bar
            left=3mm,                                    % Custom left indent
            fonttitle={\color{inyellow-title}\bfseries}, % Title color
            arc = 0mm                                    % Rounded corners
        }
        {in}                                             % For referencing
